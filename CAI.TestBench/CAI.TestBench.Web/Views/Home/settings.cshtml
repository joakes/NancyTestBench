@using CAI.TestBench.Web.HtmlHelpers
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<CAI.TestBench.Model.CaiServiceSettings>
@{
    Layout = "master-layout.cshtml";
}

<h1>Settings</h1>

<p>Restore CAI to <a href="/settings?restore=true">default settings</a> or check connectivity on the <a href="cai-status">CAI Status</a> page.</p>

<br />

<form class="form-horizontal" role="form" action="settings" method="POST">
    <div class="form-group">
        @Html.LabelFor(m => m.ServiceId, new { @class = "col-sm-2 control-label" }, "Service ID")
        @Html.TextBoxFor(m => m.ServiceId, new { @class = "form-control", placeholder = "Service Id" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Organisation, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(m => m.Organisation, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BranchNumber, new { @class = "col-sm-2 control-label" }, "Branch Number")
        @Html.TextBoxFor(m => m.BranchNumber, new { @class = "form-control", placeholder = "Branch Number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastUpdated, new { @class = "col-sm-2 control-label" }, "Last Updated")
        <div class="col-sm-10">
            <p class="form-control-static">@Model.LastUpdated.ToString()</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>


